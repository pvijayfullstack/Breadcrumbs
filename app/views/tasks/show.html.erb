<h2>Task</h2>
<h3><%=h @task.name %></h3>

<p>
  <b>Project:</b>
  <%= link_to @task.project.name, project_path(@task.project) %><br/>
</p>

<p>
  <b>Notes:</b>
  <%=h @task.notes %>
</p>

<p>
  <b>Priority:</b>
  <%=h @task.priority %>
</p>

<p>
  <b>Status:</b>
  <%=h @task.status %>
</p>

<p>
  <b>Parent:</b>
  <%=h @task.parent %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Tasks', tasks_path %> |
<%= link_to 'Projects', projects_path %>
<% if @task.project %>
<br/><br/>
  <%= link_to 'Add another Task to Project: ' + @task.project.name, 
        new_task_for_project_path( @task.project ) %> <br/>
<% end %>


