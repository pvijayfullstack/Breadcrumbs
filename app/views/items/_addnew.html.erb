<div id='quick_add'>
<% form_tag(quick_add_item_path) do %>
  <small>Description:</small><br/>
  <%= text_field_tag(:description, params[:description], :size => 80 ) %>
  <%= submit_tag "Submit" %><br/>
  Type: <%= select_tag :type, options_for_select(@item_types) %>
  Priority:<%= select_tag :priority_id, options_for_select(@priority_list) %>
  Effort:<%= select_tag :effort_id, options_for_select(@effort_list) %>
  Status:<%= select_tag :status_id, options_for_select(@status_list) %>
  <br/>
  <%= hidden_field_tag(:project_id, value = project_id) %>
<% end %>
</div>
